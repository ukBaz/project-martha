[Unit]
Description=Theia Web IDE Service
After=network-online.target

[Service]
Type=idle
WorkingDirectory=/opt/theia-martha

User=linaro
Environment=NODE_VERSION=8
ExecStart=/home/linaro/.nvm/nvm-exec yarn theia start /my-workspace --hostname 0.0.0.0 --port 8080
Restart=always
RestartSec=0

[Install]
WantedBy=multi-user.target

